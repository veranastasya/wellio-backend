{
  "name": "wellio-backend",
  "version": "1.0.0",
  "description": "Wellio Backend - Microservices Architecture for Wellness Coaching Platform",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "concurrently \"npm run gateway:dev\" \"npm run core:dev\" \"npm run auth:dev\" \"npm run chat:dev\"",
    "gateway:dev": "cd services/api-gateway && npm run dev",
    "core:dev": "cd core && npm run dev",
    "auth:dev": "cd services/auth && npm run dev",
    "chat:dev": "cd services/chat && npm run dev",
    "install:all": "npm install --workspaces",
    "build:sdk": "cd core && npm run build:sdk",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  },
  "workspaces": [
    "core",
    "services/*"
  ]
}
